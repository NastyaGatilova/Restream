<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/white"/>
            <!-- Цвет кнопки при нажатии -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/gray"
                />
        </shape>
    </item>
</selector>